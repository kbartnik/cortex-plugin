{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@commands/*": ["src/commands/*"],
      "@services/*": ["src/services/*"],
      "@config/*": ["src/config/*"],
      "@adapters/*": ["src/adapters/*"],
      "@types/*": ["src/types/*"],
    },
    "outDir": "dist",
    "noEmit": true,
    "types": [],
    "skipLibCheck": true
  },
  "include": ["src", "test", "src/types"]
}